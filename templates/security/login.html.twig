{% extends 'base.html.twig' %}

{% block title %}CONNEXION :: TRT Conseil{% endblock %}

{% block body %}

    <div class="w-100">
        <div class="middle-window position-absolute top-50 start-50 p-4 text-center translate-middle">
            <img class="small-logo mb-2" src="{{ asset('images/logo.png') }}" alt="Logo">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h2 class="mb-3 font-weight-normal">CONNEXION</h2>
                <label for="inputEmail">E-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label class="mt-2" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mt-3 mb-4">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>

                <button class="btn btn-primary button-shadow" type="submit">
                    Se connecter
                </button>
            </form>
        </div>
    </div>
{% endblock %}
